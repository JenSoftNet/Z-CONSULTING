@{
    ViewData["Title"] = "Contact";
}

@section scripts {
    <script>
        var map;
        function InitializeMap() {
            var latlng = { lat: 48.452386, lng: 35.024688 };
            var myOptions = {
                zoom: 12,
                center: latlng,
                mapTypeId: google.maps.MapTypeId.ROADMAP
            };
            var mapContainer = $("#map_canvas");
            var map = new google.maps.Map(mapContainer[0], myOptions);

            var marker = new google.maps.Marker({
                position: latlng,
                map: map,
                title: 'Наши офисы'
            });
            var infowindow = new google.maps.InfoWindow({
                content: 'Днепр, ул. Благоева, 31'
            });
            google.maps.event.addListener(marker, 'click', function () {
                infowindow.open(map, marker);
            });
        }
    </script>
    <script async defer src="http://maps.googleapis.com/maps/api/js?key=AIzaSyAMOREGZOWwblbVssF77dk3isIC-L7XaG4&callback=InitializeMap" type="text/javascript"></script>
}

